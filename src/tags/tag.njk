---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
  addAllPagesToCollections: false
layout: layouts/page.njk
eleventyComputed:
  title: "Articles tagged \"{{ tag }}\""
  description: "All articles about {{ tag }} -- ski resort guides and tips from Vienna Ski Weekends."
permalink: /tags/{{ tag }}/
eleventyExcludeFromCollections: true
---

<section class="tag-page" aria-label="Articles tagged {{ tag }}">
  <div class="tag-page__list">
    {%- for post in collections[tag] | reverse %}
    <article class="post-card">
      {% if post.data.heroImage %}
      <div class="post-card__image">
        <a href="{{ post.url | url }}">
          <img src="{{ post.data.heroImage | url }}" alt="{{ post.data.heroImageAlt or post.data.title }}" loading="lazy" width="400" height="210">
        </a>
      </div>
      {% endif %}
      <div class="post-card__body">
        <h2 class="post-card__title">
          <a href="{{ post.url | url }}">{{ post.data.title }}</a>
        </h2>
        <p class="post-card__excerpt">{{ post.data.description or (post.content | excerpt) }}</p>
        <time class="post-card__date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
      </div>
    </article>
    {%- endfor %}
  </div>

  <p class="tag-page__back"><a href="{{ '/tags/' | url }}">View all topics</a></p>
</section>
